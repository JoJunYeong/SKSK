<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createidpw">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/create_first_layout"
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:fontFamily="@font/coockierunregular"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textStyle="bold"
                android:textSize="40dp"/>
            <LinearLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="ID : "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>


            <Button
                android:fontFamily="@font/coockierunregular"
                android:id="@+id/id_certify_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_dark"
                android:text="Certification"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />


            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="PW : "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="PW Again : "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="Name : "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textSize="19dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="Birth : "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="Phone : "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button
                android:fontFamily="@font/coockierunregular"
                android:id="@+id/phone_certify_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_dark"
                android:text="Certification"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!--   여기를 기점으로 회원가입 페이지 1,2 가 나뉘어집니다.    -->

        <LinearLayout
            android:id="@+id/create_second_layout"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:fontFamily="@font/coockierunregular"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textStyle="bold"
                android:textSize="40dp"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView"
                    android:background="#000000"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_icon_my_profile"/>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView_sub"
                            android:background="#997328"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_icon_my_profile"/>

                        <ImageView
                            android:id="@+id/imageView_sub2"
                            android:background="#847898"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_icon_my_profile" />


                    </LinearLayout>


                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imageView_sub3"
                            android:background="#432534"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_icon_my_profile" />

                        <ImageView
                            android:id="@+id/imageView_sub4"
                            android:background="#321302"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_icon_my_profile"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:fontFamily="@font/coockierunregular"
                android:text="Picture must be uploaded least 3 :)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                android:gravity="center"/>

            <Button
                android:fontFamily="@font/coockierunregular"
                android:id="@+id/picture_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_dark"
                android:text="Upload"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />



            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="6">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="Job : "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <EditText
                    android:fontFamily="@font/coockierunregular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="Work Place : "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <EditText
                    android:fontFamily="@font/coockierunregular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button
                android:fontFamily="@font/coockierunregular"
                android:id="@+id/work_place_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_dark"
                android:text="Work Place Verify:"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="Interest(3 choices)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textSize="20dp"
                    android:gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="10"
                    >

                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_movie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Movie" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_workout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Workout" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_walk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Walk" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Music" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_cafe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Cafe" />

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="10"
                    >

                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_computer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Computer" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_game"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Gane" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Sleep" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_basketball"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Basketball" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/hobby_soccer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Soccer" />

                </LinearLayout>




            </LinearLayout>





            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:fontFamily="@font/coockierunregular"
                    android:text="value(3 choices)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:gravity="left"/>

            </LinearLayout>


            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="10"
                    >

                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/personal_meticulous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="meticulous" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/personal_respect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="respectful" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/personal_honor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="honor" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/personal_calm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="calm" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/personal_brisk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Briskness" />

                </LinearLayout>

                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="10"
                    >

                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/personal_happy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="happy" />
                    <CheckBox
                        android:fontFamily="@font/coockierunregular"
                        android:id="@+id/personal_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="love" />

                </LinearLayout>




            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:fontFamily="@font/coockierunregular"
                android:visibility="visible"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:id="@+id/back"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Back"
                android:textSize="15dp"
                android:layout_marginTop="5dp"/>

            <Button
                android:fontFamily="@font/coockierunregular"
                android:visibility="visible"
                android:id="@+id/next"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Next(1/2)"
                android:textSize="15dp"
                android:layout_marginTop="5dp" />

            <Button
                android:visibility="gone"
                android:id="@+id/previous"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="previous(1/2)"
                android:textSize="15dp"
                android:layout_marginTop="5dp" />

            <Button
                android:fontFamily="@font/coockierunregular"
                android:visibility="gone"
                android:id="@+id/done"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="submit(2/2)"
                android:textSize="15dp"
                android:layout_marginTop="5dp" />


        </LinearLayout>

    </LinearLayout>



</ScrollView>