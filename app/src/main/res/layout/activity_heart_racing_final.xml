<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".heartRacing_final"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">



        <ImageView
            android:id="@+id/btn_back"
            android:src="@drawable/ic_icon_back"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.1"
            android:gravity="center"
            app:srcCompat="@drawable/appname" />

        <ImageButton
            android:id="@+id/chat_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:backgroundTint="#00F4E6E6" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/coockierunregular"
                android:layout_weight="5"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000000"
                android:text="나에게 심박수가 반응한\n 사람을 확인 할 수 있습니다."
                android:layout_width="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_height="100dp"/>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|right"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round"
                    android:backgroundTint="#77ff0000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/total"
                        android:fontFamily="@font/coockierunregular"
                        android:text="12"
                        android:textSize="20dp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/profile"
                    android:src="@drawable/boy1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <ImageView
                    android:id="@+id/event"
                    android:src="@drawable/ic_heart_event"
                    android:background="#ffffff"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </FrameLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageButton
                    android:id="@+id/like"
                    android:layout_weight="1"
                    android:src="@drawable/like"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:id="@+id/refuse"
                    android:background="#ffffff"
                    android:src="@drawable/refuse"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/detail"
            android:paddingTop="10dp"
            android:background="#ffffff"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/changePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_weight="2"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/women"
                            android:scaleType="fitXY"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>
                        <TableLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TableRow
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/women"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/women"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </TableRow>
                            <TableRow
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/women"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <ImageView
                                    android:layout_weight="1"
                                    android:src="@drawable/women"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="20dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/coockierunregular"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="이름"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:textSize="20dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/coockierunregular"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="성별"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:textSize="20dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/coockierunregular"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="나이"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:textSize="20dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/coockierunregular"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="직업"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginBottom="5dp"
                            android:text="관심사"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:background="#828282"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginRight="20dp"
                                    android:text="농구"
                                    android:textSize="20dp"
                                    android:background="@drawable/rectangle_round"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginRight="20dp"
                                    android:text="축구"
                                    android:textSize="20dp"
                                    android:background="@drawable/rectangle_round"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginRight="20dp"
                                    android:text="영화보기"
                                    android:textSize="20dp"
                                    android:background="@drawable/rectangle_round"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="가치관"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="15dp"
                            android:background="#828282"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginRight="20dp"
                                    android:text="꼼꼼"
                                    android:textSize="20dp"
                                    android:background="@drawable/rectangle_round"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginRight="20dp"
                                    android:text="존중"
                                    android:textSize="20dp"
                                    android:background="@drawable/rectangle_round"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginRight="20dp"
                                    android:text="반려견"
                                    android:textSize="20dp"
                                    android:background="@drawable/rectangle_round"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </ScrollView>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>