<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameList">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <ImageView
            android:id="@+id/back_btn"
            android:src="@drawable/ic_icon_back"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.1"
            android:gravity="center"
            app:srcCompat="@drawable/appname" />

        <ImageButton
            android:id="@+id/chat_btn"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:backgroundTint="#00F4E6E6" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/coockierunregular"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="HeartBeat Game"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_icon_game"
                android:id="@+id/gameImage"
                android:layout_width="match_parent"
                android:layout_height="381dp"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="top|right"
                android:background="@drawable/round"
                android:backgroundTint="#aaff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/now"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:fontFamily="@font/coockierunregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" / "
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:fontFamily="@font/coockierunregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/total"
                    android:text="9"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:fontFamily="@font/coockierunregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#33ff0000"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/gameName"
                android:padding="10dp"
                android:fontFamily="@font/coockierunregular"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_weight="2"
                android:text="Game Name : "
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/gameHowTo"
                android:padding="10dp"
                android:layout_weight="1"
                android:text="How to Play : "
                android:fontFamily="@font/coockierunregular"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>